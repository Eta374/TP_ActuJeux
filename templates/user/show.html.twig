{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
<section class="indexnews d-flex justify-content-center align-items-center flex-column">
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-voirplus mb-1 ml-3" href="{{ path('user_index') }}">back to list</a>

    <a class="btn btn-voirplus mb-1 ml-3" href="{{ path('user_edit', {'id': user.id}) }}">edit</a>

    {{ include('user/_delete_form.html.twig') }}
</section>

{% endblock %}